@page
@model TOPMS.Pages.ExchangeRate.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit ExchangeRate</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExchangeRate.Id" />
            <div class="form-group">
                <label asp-for="ExchangeRate.ValidForMonth" class="control-label"></label>
                <input asp-for="ExchangeRate.ValidForMonth" class="form-control" />
                <span asp-validation-for="ExchangeRate.ValidForMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeRate.ValidFrom" class="control-label"></label>
                <input asp-for="ExchangeRate.ValidFrom" class="form-control" />
                <span asp-validation-for="ExchangeRate.ValidFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeRate.ValidTill" class="control-label"></label>
                <input asp-for="ExchangeRate.ValidTill" class="form-control" />
                <span asp-validation-for="ExchangeRate.ValidTill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeRate.ConvertFrom" class="control-label"></label>
                <select asp-for="ExchangeRate.ConvertFrom" asp-items="Html.GetEnumSelectList<TOPMS.Enums.Currency>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="ExchangeRate.ConvertFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeRate.ConvertToBGN" class="control-label"></label>
                <select asp-for="ExchangeRate.ConvertToBGN" asp-items="Html.GetEnumSelectList<TOPMS.Enums.Currency>()" class="form-control">
                    <option selected="selected" value="BGN"></option>
                </select>
                <span asp-validation-for="ExchangeRate.ConvertToBGN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeRate.ConvertRate" class="control-label"></label>
                <input asp-for="ExchangeRate.ConvertRate" class="form-control" />
                <span asp-validation-for="ExchangeRate.ConvertRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExchangeRate.Comments" class="control-label"></label>
                <input asp-for="ExchangeRate.Comments" class="form-control" />
                <span asp-validation-for="ExchangeRate.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
