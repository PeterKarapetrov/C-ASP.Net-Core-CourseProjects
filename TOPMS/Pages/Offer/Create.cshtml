@page
@model TOPMS.Pages.Offer.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Offer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Offer.AppUserId" class="control-label"></label>
                <select asp-for="Offer.AppUserId" class ="form-control" asp-items="ViewBag.AppUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Offer.Date" class="control-label"></label>
                <input asp-for="Offer.Date" class="form-control" />
                <span asp-validation-for="Offer.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.ValidTill" class="control-label"></label>
                <input asp-for="Offer.ValidTill" class="form-control" />
                <span asp-validation-for="Offer.ValidTill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.TransportRFQId" class="control-label"></label>
                <select asp-for="Offer.TransportRFQId" class ="form-control" asp-items="ViewBag.TransportRFQId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Offer.LoadingTime" class="control-label"></label>
                <input asp-for="Offer.LoadingTime" class="form-control" />
                <span asp-validation-for="Offer.LoadingTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.DeliveryTime" class="control-label"></label>
                <input asp-for="Offer.DeliveryTime" class="form-control" />
                <span asp-validation-for="Offer.DeliveryTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.PriceOffered" class="control-label"></label>
                <input asp-for="Offer.PriceOffered" class="form-control" />
                <span asp-validation-for="Offer.PriceOffered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.Currency" class="control-label"></label>
                <select asp-for="Offer.Currency" asp-items="Html.GetEnumSelectList<TOPMS.Enums.Currency>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Offer.Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer.Comments" class="control-label"></label>
                <input asp-for="Offer.Comments" class="form-control" />
                <span asp-validation-for="Offer.Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
