@page
@model TOPMS.Pages.Offer.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].AppUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].ValidTill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].TransportRFQ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].LoadingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].DeliveryTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].PriceOffered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Offer[0].Comments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Offer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValidTill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransportRFQ.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoadingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceOffered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
