@model TOPMS.Pages.TransportRFQ.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit TransportRFQ</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransportRFQ.Id" />
            <input type="hidden" asp-for="TransportRFQ.AppUserId" />
            <input type="hidden" asp-for="TransportRFQ.MaterialId" />
            <input type="hidden" asp-for="TransportRFQ.FromId" />
            <input type="hidden" asp-for="TransportRFQ.ToId" />
            <input type="hidden" asp-for="TransportRFQ.TransportId" />
            <input type="hidden" asp-for="TransportRFQ.ServiceId" />
            <div class="form-group">
                <label asp-for="TransportRFQ.Date" class="control-label"></label>
                <input asp-for="TransportRFQ.Date" class="form-control" readonly="readonly" />
                <span asp-validation-for="TransportRFQ.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportRFQ.Packaging" class="control-label"></label>
                <input asp-for="TransportRFQ.Packaging" class="form-control" readonly="readonly" />
                <span asp-validation-for="TransportRFQ.Packaging" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportRFQ.NumberOfPackages" class="control-label"></label>
                <input asp-for="TransportRFQ.NumberOfPackages" class="form-control" />
                <span asp-validation-for="TransportRFQ.NumberOfPackages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportRFQ.PackageDimention" class="control-label"></label>
                <input asp-for="TransportRFQ.PackageDimention" class="form-control" />
                <span asp-validation-for="TransportRFQ.PackageDimention" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportRFQ.Volume" class="control-label"></label>
                <input asp-for="TransportRFQ.Volume" class="form-control" />
                <span asp-validation-for="TransportRFQ.Volume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportRFQ.Weight" class="control-label"></label>
                <input asp-for="TransportRFQ.Weight" class="form-control" />
                <span asp-validation-for="TransportRFQ.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportRFQ.ShipmentReadyDate" class="control-label"></label>
                <input asp-for="TransportRFQ.ShipmentReadyDate" class="form-control" />
                <span asp-validation-for="TransportRFQ.ShipmentReadyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportRFQ.RequestDeliveryDate" class="control-label"></label>
                <input asp-for="TransportRFQ.RequestDeliveryDate" class="form-control" />
                <span asp-validation-for="TransportRFQ.RequestDeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportRFQ.Status" class="control-label"></label>
                <select asp-for="StatusId" class="form-control" asp-items="ViewBag.StatusId">
                    <option selected="selected" value="">Please select...</option>
                </select>
                <span asp-validation-for="StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportRFQ.SpecialRequirements" class="control-label"></label>
                <input asp-for="TransportRFQ.SpecialRequirements" class="form-control" />
                <span asp-validation-for="TransportRFQ.SpecialRequirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
