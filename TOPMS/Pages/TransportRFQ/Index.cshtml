@page
@model TOPMS.Pages.TransportRFQ.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>TransportRFQs</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].From.ZIPCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].From.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].To.ZIPCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].To.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].Material.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].NumberOfPackages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].Packaging)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].PackageDimention)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].Volume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].Transport.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].Service.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].ShipmentReadyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].RequestDeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].SpecialRequirements)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].Offers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransportRFQ[0].Status.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TransportRFQ) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From.ZIPCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.From.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To.ZIPCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.To.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Material.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPackages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Packaging)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PackageDimention)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Volume) cmb
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight) kg
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Transport.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipmentReadyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialRequirements)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Offers.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            <td>
                @if (User.IsInRole("Admin") || User.IsInRole("PowerUser") || User.IsInRole("User"))
                {
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a>;

                }
                else if (User.IsInRole("Admin"))
                {
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>;
                }
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="/Offer/Create" asp-route-id="@item.Id">SubmitOffer</a>
            </td>
        </tr>
}
    </tbody>
</table>
